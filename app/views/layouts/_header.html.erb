<header class="bg-header">
  <nav class="navbar navbar-expand-lg navbar-light w-100">
    <div class="container flex-column flex-lg-row align-items-start align-items-lg-center">

      <div class="d-flex align-items-center justify-content-between w-100 order-1 order-lg-1">
        <div class="d-flex align-items-center">
          <%= link_to root_path, class: "navbar-brand p-3 m-0" do %>
            <%= image_tag('pet_dog.png', alt: "サイトロゴ", class: "logo-img") %>
          <% end %>
          <div class="welcome-text ms-2">
            <% if user_signed_in? %>
              ようこそ、<%= current_user.name %>さん!
            <% elsif admin_signed_in? %>
              管理者
            <% else %>
              ようこそ、ゲストさん!
            <% end %>
          </div>
        </div>

        <button class="navbar-toggler" type="button" 
                      data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

      </div>

      <div class="w-100 order-2 order-lg-2 my-2 my-lg-0">
        <% if admin_signed_in? %>
          <%= render "admin/searches/search_box" %>
        <% else %>
          <%= render "public/searches/search_box" %>
        <% end %>
      </div>

      <div class="collapse navbar-collapse order-3 order-lg-3 w-100" id="navbarNavDropdown">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center p-2 gap-2">
          <% if admin_signed_in? %>
            <%= link_to "病院一覧", admin_hospitals_path, class: "btn btnx-pink rounded-pill mx-1" %>
            <%= link_to "会員一覧", admin_users_path, class: "btn btnx-pink rounded-pill mx-1" %>
            <%= link_to "病院登録", new_admin_hospital_path, class: "btn btnx-pink rounded-pill mx-1" %>
            <%= link_to "タグ一覧", admin_tags_path, class: "btn btnx-pink rounded-pill mx-1" %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btnx-pink rounded-pill mx-1" %>
          <% elsif user_signed_in? %>
            <%= link_to "マイページ", mypage_public_users_path, class: "btn btnx-green rounded-pill mx-1" %>
            <%= link_to "病院一覧", public_hospitals_path, class: "btn btnx-green rounded-pill mx-1" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btnx-green rounded-pill mx-1" %>
          <% else %>
            <%= link_to "About", about_path, class: "btn btnx-green rounded-pill mx-1" %>
            <%= link_to "病院一覧", public_hospitals_path, class: "btn btnx-green rounded-pill mx-1" %>
            <%= link_to "新規登録", new_user_registration_path, class: "btn btnx-green rounded-pill mx-1" %>
            <%= link_to "ログイン", new_user_session_path, class: "btn btnx-green rounded-pill mx-1" %>
          <% end %>
        </div>
      </div>

    </div>
  </nav>
</header>

