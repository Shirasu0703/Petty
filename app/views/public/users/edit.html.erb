<h1>ユーザー情報編集</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container mt-4">
  <%= form_with model: @user, url: mypage_public_users_path, method: :patch do |f| %>

  <div class="md-3">
    <%= f.label :image, "プロフィール画像" %>
    <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %> 
  </div>

  <div class="md-3">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="md-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="md-3">
    <%= f.label :introduction, "自己紹介文" %>
    <%= f.text_area :introduction, rows: 5, class: "form-control" %>
  </div>

  <div class="my-3">
    <%= f.submit "更新", class: "btn btn-warning" %>
  </div>
  <% end %>

  <%= link_to "マイページに戻る", mypage_public_users_path, class: "btn btn-warning" %>
</div>
