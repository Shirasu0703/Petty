<div class="container mt-4">
  <h3><%= @user.name %>さんのマイページ</h3>
<hr>
  <% if @reviews.any? %>
    <div class="row">
      <div class="col-md-3 md-2">
        <%= render "public/users/profile", user: @user %>
      </div>
      <% @reviews.each do |review| %>
        <div class="col-md-3 md-4">
          <div class="card h-100">

            <div class="card-body">
              <h5 class="card-title"><%= review.title %></h5>
              <p class="card-text"><%= truncate(review.body, length: 100) %></p>
              <%= link_to "レビュー詳細", public_review_path(review), class: "btn btn-primary" %>
            </div>

            <div class="card-footer text-muted">
              投稿日: <%= review.created_at.strftime("%Y-%m-%d") %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>まだレビューは登録されていません。</p>
  <% end %>
</div>

