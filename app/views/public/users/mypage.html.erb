<div class="container mt-4">
  <h3><%= @user.name %>さんのマイページ</h3>
  <hr>

  <div class="row">
    <div class="col-md-3 md-2">
      <%= render "public/users/profile", user: @user %>
    </div>

    <div class="col-lg-9">
      <% if @reviews.any? %>
        <div class="row g-4>
          <% @reviews.each do |review| %>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= review.title %></h5>
                  <p class="card-text"><%= truncate(review.body, length: 100) %></p>
                  <p><%= link_to "#{review.comments.count} コメント", public_hospital_review_path(review.hospital, review) %></p>
                  <%= link_to "レビュー詳細", public_hospital_review_path(review.hospital, review), class: "btn btn-primary" %>
                </div>
                <div class="card-footer text-muted small">
                  投稿日: <%= review.created_at.strftime("%Y-%m-%d") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>まだレビューは登録されていません。</p>
      <% end %>
    </div>
  </div>
</div>

