<% if reviews&.any? %>
  <h2 class="text-center">レビュー</h2>
  <div class="row">
    <% reviews.each do |review| %>
      <div class="col-lx-3 col-lg-4 col-md-5 col-sm-10 md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <%= image_tag review.hospital.main_image, class: "card-img-top" %>
            <h4 class="card-title">
              <%= link_to review.hospital.name, public_hospital_path(review.hospital) %>
                <div id="review_rating_<%= review.id %>"></div>
                <script>
                  var elem = document.getElementById("review_rating_<%= review.id %>");
                  var opt = {
                      starOn: "<%= asset_path('star-on.png') %>",
                      starOff: "<%= asset_path('star-off.png') %>",
                      starHalf: "<%= asset_path('star-half.png') %>",
                      readOnly: true,
                      score: <%= review.rating %>
                  };
                  if (elem) elem.innerHTML = "";
                  raty(elem,opt);
                </script>
              <%= link_to review.title, public_hospital_review_path(review.hospital, review), class: "text-decoration-none text-primary" %>
            </h4>
            <p class="card-text">
              <%= truncate(review.body, length: 15) %>
            </p>
            <% if review.tags.present? %>
              <div class="tags mb-2">
                <% review.tags.each do |tag| %>
                  <span class="badge text-primary border"><%= tag.tag %></span>
                <% end %>
              </div>
            <% end %>
            <div id="review_<%= review.id %>" class="review-item">
              <div class="favorite-btn"><%= render "public/favorites/favorite-btn", review: review %></div>
            </div>
          <p class="card-text small">
            ✏️<%= link_to "#{review.comments.count} コメント", public_hospital_review_path(review.hospital, review) %>
          </p>
          </div>
            <div class="card-footer text-muted small">
              投稿者: 
              <% if review.user.present? %>
                <%= link_to review.user.name, public_user_path(review.user), class: "text-decoration-none text-primary" %>
              <% else %>
                不明
              <% end %>
              <br />
                投稿日: <%= review.created_at.strftime("%Y-%m-%d") %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>