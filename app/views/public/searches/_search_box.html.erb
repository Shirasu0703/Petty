<header class="bg-pink-100 d-flex align-items-center justify-content-center py-3 px-3">
  <%= form_with url: searches_public_users_path, method: :get, local: true,
        html: { class: "search-form w-100 d-flex flex-wrap justify-content-center align-items-center gap-2", style: "max-width: 900px;" } do |f| %>
    <div class="flex-grow-1">
      <%= f.text_field :word, placeholder: "検索...", class: "form-control rounded-pill w-100" %>
    </div>
    <div>
      <%= f.select :data, options_for_select([['User'], ['Review']]), {}, class: "form-select rounded-pill" %>
    </div>
    <div>
      <%= f.select :method, options_for_select([["完全一致", "perfect"], ["前方一致", "forward"], ["後方一致", "backward"], ["部分一致", "partial"]]), {}, class: "form-select rounded-pill" %>
    </div>
    <button type="submit" class="btn btn-pink rounded-pill px-4 d-flex align-items-center">
      <i class="bi bi-search me-2"></i>検索
    </button>
  <% end %>
</header>




