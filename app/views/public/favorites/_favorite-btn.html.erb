<% if review.favorited_by?(current_user) %>
  <%= link_to public_hospital_review_favorite_path(review.hospital, review), method: :delete, remote: true, class: "glyphicon glyphicon-heart" do %>
    ♥<%= review.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to public_hospital_review_favorite_path(review.hospital, review), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" do %>
    ♡<%= review.favorites.count %> いいね
  <% end %>
<% end %>