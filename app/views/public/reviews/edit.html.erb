<h1>レビュー編集ページ</h1>
<% if @review.errors.any? %>
  <%= @review.errors.count %>件のエラーが発生しました
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <%= form_with model: @review, url: public_review_path(@review), method: :patch do |f| %>

  <div class="row">
    <%= f.label :body, "総合評価", class: "col-5 col-form-label" %><br />
    <div class="col-6">
      <%= f.text_area :body, row: 5, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <%= f.label :cleanliness_comment, "清潔さ", class: "col-4 col-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :cleanliness_comment, row: 2, class: "form-control" %>
    </div>

    <%= f.label :doctor_comment, "先生の対応", class: "col-4-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :doctor_comment, row: 2, class: "form-control" %>
    </div>

    <%= f.label :staff_comment, "スタッフの対応", class: "col-4-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :staff_comment, row: 2, class: "form-control" %>
    </div>

    <%= f.label :price_comment, "料金", class: "col-4-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :price_comment, row: 2, class: "form-control" %>
    </div>

    <%= f.label :waiting_comment, "待ち時間", class: "col-4-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :waiting_comment, row: 2, class: "form-control" %>
    </div>

    <%= f.label :animal_comment, "動物目線でひとこと！(任意)", class: "col-4-form-label" %><br />
    <div class="col-5">
      <%= f.text_area :animal_comment, row: 2, class: "form-control" %>
    </div>
    <%= f.submit "更新", class: "btn btn-warning" %>
  </div>
  <% end %>

  <%= link_to "詳細に戻る", public_review_path(@review), class: "btn btn-warning" %> |
  <%= link_to "一覧に戻る", public_reviews_path, class: "btn btn-warning" %>
</div>
