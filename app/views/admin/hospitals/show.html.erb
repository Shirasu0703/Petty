<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
          <div class="vol-md-5 bg-light p-4">
            <div class="mb-4">
              <%= image_tag @hospital.main_image, class: "img-fluid rounded shadow-sm w-100" %>
            </div>

            <h5 class="mb-3 fw-bold text-secondary">
              <i class="bi bi-chat-dots"></i>この病院についてのレビュー
            </h5>

            <% if @hospital.reviews.any? %>
              <% @hospital.reviews.each do |review| %>
                <div class="border rounded p-3 mb-3 bg-white shadow-sm">
                  <div class="d-flex justify-content-between align-items-center">
                    <strong><%= review.user.name %></strong>
                    <%= link_to "詳細", edit_admin_hospital_review_path(@hospital, review), class: "btn btn-outline-primary btn-sm" %>
                  </div>

                  <!--  星評価実装時に記述する  -->
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">レビューはまだありません。</p>
            <% end %>
          </div>

          <div class="col-md-7 p-5">
            <h2 class="text-muted"><%= @hospital.name %></h2>

            <div class="d-flex align-items-center mb-3">
              <!--  星評価実装時に記述する  -->
            </div>

            <div class="md-3">
              <strong>住所：</strong>
              <%= @hospital.address %>
            </div>

            <div class="md-3">
              <strong>電話番号：</strong>
              <%= @hospital.phone_number %>
            </div>

            <div class="md-3">
              <strong>診察時間：</strong>
              <%= @hospital.opening_hours %>
            </div>

            <div class="md-3">
              <strong>診察対応動物：</strong>
              <%= @hospital.animal_types %>
            </div>

            <!-- リンクは病院一覧画面に移動 -->
            <div class="d-grid mt-4">
              <%= link_to "ホームページを見る", admin_hospitals_path, class: "btn btn-primary btn-lg rounded-pill" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

