<div class="container my-5">
  <%= render "layouts/tag_form" %>
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">

          <div class="col-md-5 p-4 bg-light">
            <% if @hospital.main_image.attached? %>
              <%= image_tag @hospital.main_image, class: "img-fluid rounded mb-3 w-100" %>
            <% end %>

            <div class="sub-images-container d-flex flex-wrap gap-2 mb-3">
              <% if @hospital.sub_images.attached? %>
                <% @hospital.sub_images.each do |image| %>
                  <%= image_tag image, class: "rounded shadow-sm image-style", size: "100x100" %>
                <% end %>
              <% end %>
            </div>

            <h5 class="mb-3 fw-bold text-secondary mt-3">
              <i class="bi bi-chat-dots text-sub-color"></i> レビュー
            </h5>

            <div class="mb-3 text-end text-sub-color">
              <%= link_to "新着順", admin_hospital_path(@hospital, sort: 'new'), class: "btn btn-link p-0" %> |
              <%= link_to "評価の高い順", admin_hospital_path(@hospital, sort: 'high_rating'), class: "btn btn-link p-0" %>
            </div>
             <hr>

            <% if @reviews.any? %>
              <% @reviews.each do |review| %>
                <div class="border rounded p-3 mb-3 bg-white shadow-sm text-start">
                  <div class="d-flex align-items-center mb-2">
                    <% if review.user.image.attached? %>
                      <%= image_tag review.user.image, size: "40x40", class: "rounded-circle me-2"  %>
                    <% else %>
                      <%= image_tag "no_image.jpg", size: "40x40", class: "rounded-circle me-2"  %>
                    <% end %>
                    <strong class="text-sub-color"><%= review.user.name %></strong>
                  </div>
                    <div id="review_rating_<%= review.id %>"></div>
                    <script>
                        var elem = document.getElementById("review_rating_<%= review.id %>");
                        var opt = {
                            starOn: "<%= asset_path('star-on.png') %>",
                            starOff: "<%= asset_path('star-off.png') %>",
                            starHalf: "<%= asset_path('star-half.png') %>",
                            readOnly: true,
                            score: <%= review.rating %>
                        };
                        if (elem) elem.innerHTML = "";
                        raty(elem,opt);
                    </script>
        
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted"><%= review.body.truncate(15, omission: ' [...]') %></span>
                    <%= link_to "詳細", admin_hospital_review_path(review.hospital, review), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                  <div class="mt-2 text-end">
                    ♥<%= review.favorites.count %>いいね
                  </div>
                </div>
              <% end %>
            <% else %>
              <p class="text-sub-color">レビューはまだありません。</p>
            <% end %>
          </div>


          <div class="col-md-7 p-5">
            <h2 class="fw-bold mb-3 text-main-color"><%= @hospital.name %></h2>

            <% @hospital.tags.each do |tag| %>
              <span class="badge text-primary border me-1"><%= tag.tag %></span>
            <% end %>

            <h4 class="text-sub-color">総合評価</h4>
            <div class="d-flex align-items-center">
              <div id="hospital_rating_<%= @hospital.id %>"></div>
              <p class="hospital-review-total">(<%= @hospital.reviews.count%>)</p>
            </div>
            <div class="d-flex align-items-center">
              <p class="text-muted">平均：<%= @hospital.average_rating %> / 5</p>
            </div>
            <hr>
            <div class="mt-3">
              <strong class="text-sub-color">清潔さ</strong>
              <div id="hospital_cleanliness_rating_<%= @hospital.id %>"></div>
              <p class="text-muted">平均：<%= @hospital.average_cleanliness %> / 5</p>
            </div>

            <div class="mt-3">
              <strong class="text-sub-color">先生の対応</strong>
              <div id="hospital_doctor_rating_<%= @hospital.id %>"></div>
              <p class="text-muted">平均：<%= @hospital.average_doctor %> / 5</p>
            </div>

            <div class="mt-3">
              <strong class="text-sub-color">スタッフの対応</strong>
              <div id="hospital_staff_rating_<%= @hospital.id %>"></div>
              <p class="text-muted">平均：<%= @hospital.average_staff %> / 5</p>
            </div>

            <div class="mt-3">
              <strong  class="text-sub-color">料金</strong>
              <div id="hospital_price_rating_<%= @hospital.id %>"></div>
              <p class="text-muted">平均：<%= @hospital.average_price %> / 5</p>
            </div>

            <div class="mt-3">
              <strong  class="text-sub-color">待ち時間</strong>
              <div id="hospital_waiting_rating_<%= @hospital.id %>"></div>
              <p class="text-muted">平均：<%= @hospital.average_waiting %> / 5</p>
            </div>
            <hr>
            <div class="md-2 text-sub-color">
              <strong>住所：</strong>
              <%= @hospital.address %>
            </div>

            <div class="md-2 text-sub-color">
              <strong>電話番号：</strong>
              <%= @hospital.phone_number %>
            </div>

            <div class="md-2 text-sub-color">
              <strong>診察時間：</strong>
              <%= @hospital.opening_hours %>
            </div>

            <div class="md-2 text-sub-color">
              <strong>診察対応動物：</strong>
              <%= @hospital.animal_types %>
            </div>
          </div>
        </div>
        <div class="p-3 text-center">
          <%= link_to "病院一覧へ", admin_hospitals_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    var elem = document.getElementById("hospital_rating_<%= @hospital.id %>");
    var opt = {
        starOn: "<%= asset_path('star-on.png') %>",
