<h2 class="text-center my-4">病院一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>病院名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>登録日</th>
      <th>レビュー件数</th>
      <th>平均評価</th>
      <th>公開状態</th>
      <th>(編集)</th>
      <th>(削除)</th>
    </tr>
  </thead>
  <tbody>
  <% @hospitals.each do |hospital| %>
    <tr>
      <td><%= link_to hospital.name, admin_hospital_path(hospital) %></td>
      <td><%= hospital.address %></td>
      <td><%= hospital.phone_number %></td>
      <td><%= hospital.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= hospital.reviews.count %></td>
      <td><p class="text-muted">平均：<%= @hospital.average_rating %> / 5</p></td>
      <td><p>△△</p></td>
      <td><%= link_to "編集", edit_admin_hospital_path(hospital.id), class: "btn btn-primary" %></td>
      <td><%= link_to "削除", admin_hospital_path(hospital.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
