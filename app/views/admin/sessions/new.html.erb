<div class="d-flex align-items-center justify-content-center text-center">
  <div class="login-form card p-4 shadow-lg mt-5 w-25">
    <h2 class="mb-4 fw-bold">管理者ログイン</h2>

    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="mb-3 field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control bg-white" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control bg-white" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btnx-main w-100 mt-3" %>
      </div>
    <% end %>


<%= render "admin/shared/links" %>
