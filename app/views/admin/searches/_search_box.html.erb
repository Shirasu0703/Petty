<% if admin_signed_in? %>
  <div class="bg-pink-100 admin_search-wrapper py-3">
    <%= form_with url: admin_searches_path, method: :get, local: true,
        html: { class: "search-form w-100 d-flex flex-wrap align-items-center gap-2" } do |f| %>
      <div class="flex-grow-1 mr-2">
        <%= f.search_field :word, placeholder: "検索...", class: "form-control rounded-pill w-100 mb-1", value: params[:word] %>
      </div>
      <div>
        <%= f.select :data, options_for_select([["会員名", "User"], ["レビュー", "Review"], ["タグ", "Tag"],["病院名", "Hospital"]], params[:data]), {}, class: "form-select rounded-pill text-main-color mb-1" %>
      </div>
      <div>
        <%= f.select :method, options_for_select([["完全一致", "perfect"], ["前方一致", "forward"], ["後方一致", "backward"], ["部分一致", "partial"]], params[:method]), {}, class: "form-select rounded-pill text-main-color mb-1" %>
      </div>
      <button type="submit" class="btn btn-pink rounded-pill px-4 d-flex align-items-center mb-1">
        <i class="bi bi-search me-2"></i>検索
      </button>
    <% end %>
  </div>
<% end %>
