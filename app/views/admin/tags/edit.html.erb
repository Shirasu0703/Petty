<h1>タグ編集</h1>

<%= form_with model: [:admin, @tag], local: true do |f| %>
  <div class="form-group">
    <%= f.label :tag, "タグ名" %>
    <%= f.text_field :tag, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit "更新", class: "btn btn-primary" %>
    <%= link_to "一覧に戻る", admin_tags_path, class: "btn btn-secondary" %>
  </div>
<% end %>

