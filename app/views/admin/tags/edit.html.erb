<div class="d-flex align-items-center justify-content-center text-center">
  <div class="card p-4 shadow-lg mt-5 col-xl-3 col-lg-5 col-md-6 col-sm-8">
    <h2 class="mb-4 fw-bold ext-main-color">タグ編集</h2>

    <%= render "layouts/errors", obj: @tag %>

    <%= form_with model: [:admin, @tag], local: true do |f| %>
      <div class="mb-3 text-start">
        <%= f.label :tag, "タグ名", class: "form-label fw-bold text-sub-color" %>
        <%= f.text_field :tag, class: "form-control bg-white" %>
      </div>

      <div class="mt-4 d-grid gap-2">
        <%= f.submit "更新", class: "btn btn-primary mb-3" %>
        <%= link_to "削除", admin_tag_path(@tag),
                    method: :delete,
                    data: { confirm: "削除してよろしいですか？" },
                    class: "btn btn-danger mb-3" %>
      </div>
    <% end %>
    <div class="mt-4 d-grid gap-2">
       <%= link_to "一覧に戻る", admin_tags_path, class: "btn btn-secondary mb-3" %>
    </div>
  </div>
</div>


