<h2 class="text-center my-4">会員一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>登録日</th>
      <th>投稿件数</th>
      <th>ステータス</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, admin_user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= "#{user.reviews.count} 件" %></td>
      <td>
        <% if user.is_active? %>
          有効
        <% else %>
          退会済み
        <% end %>
      </td>
      <td><%= link_to "編集", edit_admin_user_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
